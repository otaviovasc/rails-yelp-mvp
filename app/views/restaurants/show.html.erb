<h1><%= @restaurant.name %></h1>
<%= render 'restaurant', restaurant: @restaurant %>
<%= link_to 'Back to restaurants', restaurants_path, class: 'btn btn-info' %>

<h2>Create review to restaurant: <%= @restaurant.name %></h2>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit review', class: 'btn btn-primary' %>
  </div>
  <%= link_to 'View ALL reviews', restaurant_reviews_path(@restaurant), class: 'btn btn-info' %>
<% end %>
